FROM ibmcom/mq:latest

ARG MQ_QMGR_NAME
ARG MQ_CHANNEL
ARG MQ_CONN_NAME
ARG MQ_USER
ARG MQ_PWD

ENV MQ_QMGR_NAME=${MQ_QMGR_NAME} \
    MQ_CHANNEL=${MQ_CHANNEL} \
    MQ_CONN_NAME=${MQ_CONN_NAME} \
    MQ_USER=${MQ_USER} \
    MQ_PWD=${MQ_PWD} \
    LICENSE=accept

EXPOSE 1414 9443

CMD ["runmqserver"]
